<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/newgame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#3F51B5"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#3F51B5"
                app:srcCompat="@drawable/soccer" />

            <TextView
                android:id="@+id/goal1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="0"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/foul1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="0"
                android:textSize="40sp" />

            <Button
                android:id="@+id/addgoal1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="ADD GOAL"
                android:textStyle="bold" />

            <Button
                android:id="@+id/addfoul1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD FOUL"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#DF5353"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#DF5353"
                app:srcCompat="@drawable/foot" />

            <TextView
                android:id="@+id/goal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="0"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/foul2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="0"
                android:textSize="40sp" />

            <Button
                android:id="@+id/addgoal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="ADD GOAL"
                android:textStyle="bold" />

            <Button
                android:id="@+id/addfoul2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD FOUL"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/newwgam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:layout_weight="-2"
        android:background="#000000"
        android:shadowColor="#FFFFFF"
        android:text="NEW GAME"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>